{% extends "Blog::content.PageDesign" %}

{% block Body %}

    <div class="container text-center my-4">
        <h1>{{ trans("Blog::Blog.blogAdminListTitle") }}</h1>
    </div>

    <div class="container my-4">

        <main class="">

            <!-- TODO: show only if admin -->
            <div class="blog-admin-create text-center my-4">
                <!-- modal trigger -->
                <button class="btn btn-success" data-toggle="modal" data-target=".bd-example-modal-lg"><i
                            class="fa fa-plus"
                            aria-hidden="true"></i>&emsp;{{ trans("Blog::Blog.blogAdminListNewBlog") }}
                </button>
            </div>
            <!-- /admin -->

            <div class="blog-list" itemscope itemtype="https://schema.org/Blog">

                <meta itemprop="description" content="{{ trans("Blog::Blog.blogAdminListMetaDescription") }}">

                {% for blog in blogList %}

                    {% include "Blog::content.partials.BlogAdminListItem" %}

                {% endfor %}

            </div>

            {% include "Blog::content.partials.CreateNewBlog" %}

        </main>

    </div>

{% endblock %}